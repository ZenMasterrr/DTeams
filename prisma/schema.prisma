generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Zap {
  id        String   @id @default(uuid())
  name      String
  userId    Int
  status    String   @default("active")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Action    Action[]
  Trigger   Trigger?
  User      User     @relation(fields: [userId], references: [id])
  ZapRun    ZapRun[]

  @@index([userId])
}

model Action {
  id           String      @id
  zapId        String
  type         String
  metadata     Json        @default("{}")
  sortingOrder Int         @default(0)
  createdAt    DateTime    @default(now())
  updatedAt    DateTime
  Zap          Zap         @relation(fields: [zapId], references: [id])
  ActionRun    ActionRun[]

  @@index([zapId])
}

model ActionRun {
  id        String   @id
  actionId  String
  zapRunId  String
  status    String   @default("pending")
  metadata  Json     @default("{}")
  createdAt DateTime @default(now())
  updatedAt DateTime
  Action    Action   @relation(fields: [actionId], references: [id])
  ZapRun    ZapRun   @relation(fields: [zapRunId], references: [id])

  @@index([actionId])
  @@index([zapRunId])
}

model AvailableAction {
  id          String   @id
  type        String   @unique
  name        String
  description String?
  parameters  Json     @default("{}")
  createdAt   DateTime @default(now())
  updatedAt   DateTime
}

model AvailableTrigger {
  id          String   @id
  type        String   @unique
  name        String
  description String?
  parameters  Json     @default("{}")
  createdAt   DateTime @default(now())
  updatedAt   DateTime
}

model Trigger {
  id        String   @id
  zapId     String   @unique
  type      String
  metadata  Json     @default("{}")
  createdAt DateTime @default(now())
  updatedAt DateTime
  Zap       Zap      @relation(fields: [zapId], references: [id])
}

model User {
  id                  Int       @id @default(autoincrement())
  name                String?
  email               String?   @unique
  password            String?
  address             String    @unique
  createdAt           DateTime  @default(now())
  updatedAt           DateTime
  metadata            Json      @default("{}")
  googleAccessToken   String?
  googleRefreshToken  String?
  googleTokenExpiry   DateTime?
  Zap                 Zap[]
}

model ZapRun {
  id           String        @id
  zapId        String
  metadata     Json          @default("{}")
  createdAt    DateTime      @default(now())
  updatedAt    DateTime
  status       String        @default("pending")
  ActionRun    ActionRun[]
  Zap          Zap           @relation(fields: [zapId], references: [id])
  ZapRunOutbox ZapRunOutbox?

  @@index([zapId])
}

model ZapRunOutbox {
  id          String    @id
  zapRunId    String    @unique
  processed   Boolean   @default(false)
  processedAt DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime
  ZapRun      ZapRun    @relation(fields: [zapRunId], references: [id])
}
