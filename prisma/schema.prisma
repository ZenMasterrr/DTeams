generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Zap {
  id          String   @id @default(uuid())
  triggerType String
  chain       String
  token       String
  price       Float?
  webhookUrl  String?
  actionType  String
  actionData  Json
  txHash      String
  status      String   @default("pending")
  error       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
